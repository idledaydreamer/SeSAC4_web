	<body class="fade">
		<div class="progress-container">
			<div class="progress-bar" id="indicator"></div>
		</div>


		<div class="forwave">
			<div class="wave -one"></div>
			<div class="wave -two"></div>
			<div class="wave -three"></div>
		</div>
				

			<div class = "box">
				


				<div class="form-div">
					<form action="32" method="post">
						<fieldset>
							<legend>필수</legend>
							<input type="text" name="name" placeholder="이름" required /><br />
							<input type="text" name="id" placeholder="아이디" required /><br />
							<input type="password" name="pw" placeholder="비밀번호" required />
						</fieldset>
						<div style="height: 5%;"></div>
						<fieldset>
							<legend>선택</legend>
							<input
								type="tel"
								name="tel"
								placeholder="휴대폰번호"
								required
							/><br />
							<input
								type="email"
								name="email"
								placeholder="이메일"
								required
							/><br />
							<select name="year" class="dropdown-menu">
								<option selected disabled hidden>년</option>
								<% for (var i= 2022 ; i>=1980; i--) { %>
								<option value="<%=i%>"><%=i%></option>
								<% } %>
							</select>
							<select name="month" id="birth-month">
								<option selected disabled hidden>월</option>
								<% for (var i= 1 ; i<=12; i++) { %>
								<option value="<%=i%>"><%=i%></option>
								<% } %>
							</select>
							<select name="date" id="birth-date">
								<option selected disabled hidden>일</option>
								<% for (var i= 1 ; i<=31; i++) { %>
								<option value="<%=i%>"><%=i%></option>
								<% } %>
							</select>
						</fieldset>
						<div style="height: 5%;"></div>
						<button type="submit" class="button">가입완료</button>
						<!-- <button type="submit" class="btn4"><span>가입완료</span></button> -->
					</form>
