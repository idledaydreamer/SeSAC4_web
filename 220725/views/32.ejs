		<style>
			.progress-container {
				position: fixed;
				top: 0;
				z-index: 1000000;
				width: 100%;
				height: 5px;
				background: rgb(81, 64, 64);
			}
			.progress-bar {
				height: 5px;
				background: aquamarine;
				width: 0%;
			}

			html {
				background: aquamarine;
				display: flex;
				align-items: center;
			}
			body {
				width: 90%;
				height: 80%;

				margin: 0 auto;
				align-self: 0 auto;
				text-align: center;

				background: rgb(255, 255, 255);

				/* display: flex; */
				justify-content: center;
				align-items: center;
			}
			.title {
				position: absolute;
				left: 0;
				top: 0;
				width: 100%;
				z-index: 1;
				line-height: 300px;
				text-align: center;
				transform: translate3d(0, 0, 0);
				color: rgb(0, 0, 0);
				text-transform: uppercase;
				font-family: 'Playfair Display', serif;
				letter-spacing: 0.4em;
				font-size: 24px;
				text-shadow: 0 1px 0 rgba(black, 0.1);
				text-indent: 0.3em;
			}
			@keyframes drift {
				from {
					transform: rotate(0deg);
				}
				from {
					transform: rotate(360deg);
				}
			}

			p.typing-txt {
				position: relative;
				font-size: 15px;
				width: 70px;
				height: 15px;
				overflow: hidden;
				animation: typingAni 3s steps(5, end) 1;
			}
			p.typing-txt::after {
				position: absolute;
				display: block;
				content: '';
				width: 20px;
				height: 15px;
				top: 0;
				right: 0;
				border-right: 1px solid #000;
				animation: cursor 0.5s step-end infinite;
			}
			@keyframes typingAni {
				0% {
					width: 0%;
				}
				100% {
					width: 70px;
				}
			}
			@keyframes cursor {
				0% {
					opacity: 0;
				}
				50% {
					opacity: 1;
				}
				100% {
					opacity: 0;
				}
			}
			.box {
				/* width: 300px;
				height: 300px; */
				width: 100%;
				height: 100%;
				border-radius: 5px;
				box-shadow: 0 2px 30px rgba(black, 0.2);
				background: lighten(#ff5fba, 10%);
				position: relative;
				overflow: hidden;
				transform: translate3d(0, 0, 0);
			}

			.wave {
				opacity: 0.4;
				position: absolute;
				top: 3%;
				left: 50%;
				background: rgb(100, 203, 255);

				/* width: 500px;
				height: 500px; */
				width: 300%;
				height: 300%;
				margin-left: -250px;
				margin-top: -250px;
				/* transform-origin: 50% 48%; */
				border-radius: 43%;
				animation: drift 3000ms infinite linear;
			}

			.wave.-three {
				animation: drift 5000ms infinite linear;
				opacity: 0.3;
				background: rgb(255, 53, 53);
			}

			.wave.-two {
				animation: drift 7000ms infinite linear;
				opacity: 0.6;
				background: aquamarine;
			}

			.box:after {
				content: '';
				display: block;
				left: 0;
				top: 0;
				width: 100%;
				height: 100%;
				background: linear-gradient(
					to bottom,
					rgba(#e8a, 1),
					rgba(#def, 0) 80%,
					rgba(white, 0.5)
				);
				z-index: 11;
				transform: translate3d(0, 0, 0);
			}

			select {
				width: 100px;
			}
			.dropdown-menu {
				max-height: 100px;
				overflow: scroll;
				overflow-x: hidden;
				margin-top: 0px;
			}

			button {
				position: relative;
				display: block;
				width: 100px;
				height: 40px;
				text-align: center;
				line-height: 40px;
				border: 2px solid #000;
				text-decoration: none;
				color: #000;
				transition: all 0.3s;
			}
			button:after {
				content: '';
				position: absolute;
				top: 5px;
				left: 5px;
				width: 100%;
				height: 100%;
				border-bottom: 2px solid #000;
				border-right: 2px solid #000;
			}

			button:active {
				top: 5px;
				left: 5px;
			}
			button:active:after {
				border: 0;
			}

