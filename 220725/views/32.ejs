				letter-spacing: 0.4em;

				font-size: 24px;
				text-indent: 0.1em;
			}
			

			p.typing-txt {
				position: relative;
				font-size: 15px;
				width: 180px;
				height: 15px;
				overflow: hidden;
				animation: typingAni 3s steps(5, end) 1;
			}
			p.typing-txt::after {
				position: absolute;
				display: block;
				content: '';
				width: 20px;
				height: 15px;
				top: 0;
				right: 0;
				border-right: 1px solid #000;
				animation: cursor 0.5s step-end infinite;
			}
			@keyframes typingAni {
				0% {
					width: 0%;
				}
				25% {
					width: 70px;
				}
				50% {
					width: 150px;
				}
				100% {
					width: 180px;
				}
			}
			@keyframes cursor {
				0% {
					opacity: 0;
				}
				50% {
					opacity: 1;
				}
				100% {
					opacity: 0;
				}
			}

			.forwave {
				position: fixed;
				width: 100%;
				height: 100%;
			}

			.box {
				width: 90%;
				height: 85%;
				border-radius: 30px;


				margin: 0 auto;
				align-self: 0 auto;
				text-align: center;
/* 
				background: rgb(255, 255, 255); */
				background: linear-gradient(rgba(0, 0, 0, 0.914), rgba(127, 255, 212, 0));

				/* display: flex; */
				justify-content: center;
				align-items: center;
			
				/* background: lighten(#ff5fba, 10%); */

				position: relative;
				overflow: hidden;
				transform: translate3d(0, 0, 0);
			}

			.box:after {
				z-index: 11;
				transform: translate3d(0, 0, 0);
			}

			.wave {
				opacity: 0.4;
				position: absolute;
				top: 3%;
				left: 50%;
				background: rgb(100, 203, 255);

				/* width: 500px;
				height: 500px; */
				width: 300%;
				height: 300%;
				margin-left: -250px;
				margin-top: -250px;
				transform-origin: 50% 48%;
				border-radius: 43%;
				animation: drift 3000ms infinite linear;

				z-index: -50;
			}

			.wave.-three {
				animation: drift 5000ms infinite linear;
				opacity: 0.3;
				background: rgb(255, 119, 119);
			}

			.wave.-two {
				animation: drift 7000ms infinite linear;
				opacity: 0.6;
				background: aquamarine;
			}
			@keyframes drift {
				from {
					transform: rotate(0deg);
				}
				from {
					transform: rotate(360deg);
				}
			}



			.form-div {
				position:absolute;
				top:-100px;
				right:0;
				bottom:0;
				left:0;
				
				display: flex;
				align-items: center;
				justify-content: center;
			}

			.form-div * {

				padding: 5px;
				margin: 5px;
			}
			fieldset {
				border-style: hidden;
			}
			legend {
				font-size: small;
				font-style: italic;
				color: rgba(255, 255, 255, 0.598);
			}


			input {
				z-index: 1000;
				border-radius: 10px;
				background-color: rgba(0, 0, 0, 0.554);
			}
			select {
				width: 100px;
				border-radius: 10px;
				background-color: rgba(0, 0, 0, 0.554);
				
			}
			input:hover {
				background-color: rgba(127, 255, 212, 0.532);
